@using AdminDesk.Models.ServiceOrder;
@model ServiceOrderFullViewModel

<style>
    body {
        background-color: #d9e5eb;
        margin: 0;
        padding: 0;
        color: #313638;
    }

    #create-container {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        min-height: 100vh;
        padding: 2%;
    }

    .form-container {
        max-width: 60rem; /* Increase the max-width as needed */
        width: 100%;
        background-color: white;
        padding: 2%;
        border-radius: 8px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        margin-left: auto;
        margin-right: auto;
    }

    .form-group {
        margin-bottom: 1rem;
    }

    label {
        display: block;
        margin-bottom: 0.5rem;
        font-weight: bold;
    }

    input {
        width: 100%;
        padding: 0.5rem;
        border: 1px solid #ccc;
        border-radius: 4px;
        box-sizing: border-box;
        margin-bottom: 0.5rem;
    }

    .button {
        display: inline-block;
        padding: 0.5rem 1rem;
        background-color: #88afc2;
        border-radius: 5px;
        cursor: pointer;
        transition: background-color 0.3s;
        color: black;
        text-decoration: none;
        margin: 2% 0;
    }

        .button:hover {
            background-color: rgb(251, 114, 19);
        }

    .customer-container {
        display: flex;
        flex-wrap: wrap;
        justify-content: space-between;
    }

    .customer-group {
        flex-basis: 48%; /* Adjust the width as needed */
        box-sizing: border-box;
    }

    .customer-comment-group {
        width: 100%;
        box-sizing: border-box;
    }
</style>


<div id="create-container">
    <h1>Ny</h1>
    <h4>Serviceordre</h4>
    
        <div class="form-container">
            <form asp-action="Post" asp-controller="ServiceOrder" method="post">
                @Html.ValidationSummary()
                @Html.AntiForgeryToken()

                <div class="customer-container">
                    <div class="customer-group">

                        <div class="form-group">
                            <label asp-for="UpsertModel.Mechanic"></label>
                            <input asp-for="UpsertModel.Mechanic" type="text" /><br />
                        </div>

                        <div class="form-group">
                            <label asp-for="UpsertModel.CreatedDate"></label>
                            <input asp-for="UpsertModel.CreatedDate" type="date" /><br />
                        </div>
                        <div class="form-group">
                            <label asp-for="UpsertModel.TotalWorkHours"></label>
                            <input asp-for="UpsertModel.TotalWorkHours" type="text" /><br />
                        </div>
                    </div>
                    <div class="customer-group">
                        <div class="form-group">
                            <label asp-for="UpsertModel.SerialNumber"></label>
                            <input asp-for="UpsertModel.SerialNumber" type="text" /><br />
                        </div>
                        <div class="form-group">
                            <label asp-for="UpsertModel.OrderStatus"></label>
                            <input asp-for="UpsertModel.OrderStatus" type="text" /><br />
                        </div>
                    </div>
                </div>
                
                <div class="form-group">
                    <label asp-for="UpsertModel.Comment"></label>
                    <input asp-for="UpsertModel.Comment" type="text" /><br />
                </div>
                <div class="form-group">
                    <label asp-for="UpsertModel.FutureMaintenance"></label>
                    <input asp-for="UpsertModel.FutureMaintenance" type="text" /><br />
                </div>
               
                <div class="customer-container">
                    <div class="customer-group">
                        <div class="form-group">
                            <label asp-for="UpsertModel.Customer.CustomerFirstName"></label>
                            <input asp-for="UpsertModel.Customer.CustomerFirstName" type="text" /><br />
                        </div>
                        <div class="form-group">
                            <label asp-for="UpsertModel.Customer.CustomerEmail"></label>
                            <input asp-for="UpsertModel.Customer.CustomerEmail" type="text" /><br />
                        </div>
                        <div class="form-group">
                            <label asp-for="UpsertModel.Customer.CustomerStreet"></label>
                            <input asp-for="UpsertModel.Customer.CustomerStreet" type="text" /><br />
                        </div>
                        <div class="form-group">
                            <label asp-for="UpsertModel.Customer.CustomerZipcode"></label>
                            <input asp-for="UpsertModel.Customer.CustomerZipcode" type="text" /><br />
                        </div>

                        <!-- Add more customer-related fields as needed -->
                    </div>

                    <div class="customer-group">
                        <div class="form-group">
                            <label asp-for="UpsertModel.Customer.CustomerLastName"></label>
                            <input asp-for="UpsertModel.Customer.CustomerLastName" type="text" /><br />
                        </div>
                        <div class="form-group">
                            <label asp-for="UpsertModel.Customer.CustomerPhoneNumber"></label>
                            <input asp-for="UpsertModel.Customer.CustomerPhoneNumber" type="text" /><br />
                        </div>
                        
                        <div class="form-group">
                            <label asp-for="UpsertModel.Customer.CustomerCity"></label>
                            <input asp-for="UpsertModel.Customer.CustomerCity" type="text" /><br />
                        </div>
                        

                    </div>
                </div>

                <div class="customer-comment-group">
                    <div class="form-group">
                        <label asp-for="UpsertModel.Customer.CustomerComment"></label>
                        <input asp-for="UpsertModel.Customer.CustomerComment" type="text" /><br />
                    </div>
                </div>

                <input type="submit" />

            </form>
        
    </div>
</div>
