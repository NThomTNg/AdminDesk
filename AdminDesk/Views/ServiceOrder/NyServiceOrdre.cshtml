@using AdminDesk.Models.ServiceOrder;
@model ServiceOrderFullViewModel

<style>
    body {
        background-color: #d9e5eb;
        margin: 0;
        padding: 0;
        font-family: sans-serif;
        color: #313638;
    }

    #create-container {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        min-height: 100vh;
        padding: 2%;
    }

    .form-container {
        max-width: 60rem; /* Increase the max-width as needed */
        width: 100%;
        background-color: white;
        padding: 2%;
        border-radius: 8px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        margin-left: auto;
        margin-right: auto;
    }

    .form-group {
        margin-bottom: 1rem;
    }

    label {
        display: block;
        margin-bottom: 0.5rem;
        font-weight: bold;
    }

    input {
        width: 100%;
        padding: 0.5rem;
        border: 1px solid #ccc;
        border-radius: 4px;
        box-sizing: border-box;
        margin-bottom: 0.5rem;
    }

    .button {
        display: inline-block;
        padding: 0.5rem 1rem;
        background-color: #88afc2;
        border-radius: 5px;
        cursor: pointer;
        transition: background-color 0.3s;
        color: black;
        text-decoration: none;
        margin: 2% 0;
    }

    .button-container {
        text-align: center;
        margin-top: 2%;
    }

    .button:hover {
        background-color: rgb(251, 114, 19);
        color: black;
    }

    .customer-container {
        display: flex;
        flex-wrap: wrap;
        justify-content: space-between;
    }

    .customer-group {
        flex-basis: 48%; /* Adjust the width as needed */
        box-sizing: border-box;
    }

    .customer-comment-group {
        width: 100%;
        box-sizing: border-box;
    }
</style>

<div id="create-container">
    <h1>Ny</h1>
    <h4>Serviceordre</h4>

    <div class="button-container">
        <a asp-action="Index" class="button">Tilbake til liste</a>
    </div>


    <div class="form-container">
        <form asp-action="Post" asp-controller="ServiceOrder" method="post">
            @Html.ValidationSummary()
            @Html.AntiForgeryToken()

            <div class="customer-container">
                <div class="customer-group">

                    <div class="form-group">
                        <label asp-for="UpsertModel.Mechanic">Mekaniker</label>
                        <input asp-for="UpsertModel.Mechanic" type="text" /><br />
                    </div>

                    <div class="form-group">
                        <label asp-for="UpsertModel.CreatedDate">Dato Opprettet</label>
                        <input asp-for="UpsertModel.CreatedDate" type="date" /><br />
                    </div>
                    <div class="form-group">
                        <label asp-for="UpsertModel.TotalWorkHours">Antatte Arbeidstimer</label>
                        <input asp-for="UpsertModel.TotalWorkHours" type="text" /><br />
                    </div>
                </div>
                <div class="customer-group">
                    <div class="form-group">
                        <label asp-for="UpsertModel.SerialNumber">SerieNummber</label>
                        <input asp-for="UpsertModel.SerialNumber" type="text" /><br />
                    </div>
                    <div class="form-group">
                        <label asp-for="UpsertModel.OrderStatus">Status</label>
                        <input asp-for="UpsertModel.OrderStatus" type="text" /><br />
                    </div>
                </div>
            </div>

            <div class="form-group">
                <label asp-for="UpsertModel.Comment">Kommentar</label>
                <input asp-for="UpsertModel.Comment" type="text" /><br />
            </div>
            <div class="form-group">
                <label asp-for="UpsertModel.FutureMaintenance">Fremtidig Vedlikehold</label>
                <input asp-for="UpsertModel.FutureMaintenance" type="text" /><br />
            </div>

            <div class="customer-container">
                <div class="customer-group">
                    <div class="form-group">
                        <label asp-for="UpsertModel.Customer.CustomerFirstName">Kunde Fornavn</label>
                        <input asp-for="UpsertModel.Customer.CustomerFirstName" type="text" /><br />
                    </div>
                    <div class="form-group">
                        <label asp-for="UpsertModel.Customer.CustomerEmail">Email</label>
                        <input asp-for="UpsertModel.Customer.CustomerEmail" type="text" /><br />
                    </div>
                    <div class="form-group">
                        <label asp-for="UpsertModel.Customer.CustomerStreet">Adresse</label>
                        <input asp-for="UpsertModel.Customer.CustomerStreet" type="text" /><br />
                    </div>
                    <div class="form-group">
                        <label asp-for="UpsertModel.Customer.CustomerZipcode">PostNummer</label>
                        <input asp-for="UpsertModel.Customer.CustomerZipcode" type="text" /><br />
                    </div>

                    <!-- Add more customer-related fields as needed -->
                </div>

                <div class="customer-group">
                    <div class="form-group">
                        <label asp-for="UpsertModel.Customer.CustomerLastName">Kunde Etternavn</label>
                        <input asp-for="UpsertModel.Customer.CustomerLastName" type="text" /><br />
                    </div>
                    <div class="form-group">
                        <label asp-for="UpsertModel.Customer.CustomerPhoneNumber">Telefon Nummer</label>
                        <input asp-for="UpsertModel.Customer.CustomerPhoneNumber" type="text" /><br />
                    </div>

                    <div class="form-group">
                        <label asp-for="UpsertModel.Customer.CustomerCity">By</label>
                        <input asp-for="UpsertModel.Customer.CustomerCity" type="text" /><br />
                    </div>


                </div>
            </div>

            <div class="customer-comment-group">
                <div class="form-group">
                    <label asp-for="UpsertModel.Customer.CustomerComment"></label>
                    <input asp-for="UpsertModel.Customer.CustomerComment" type="text" /><br />
                </div>
            </div>
            <div class="button-container">
                <input type="submit" value="Lagre" class="button" style="margin: 2% 0;" />
            </div>

        </form>

    </div>
</div>
