@using AdminDesk.Models.ServiceOrder;
@model CompositeViewModel


<!DOCTYPE html>
<html>
        <title>Service Order Details</title>
<head>

    <style>
     
            html, body {
            background-color: #d9e5eb;
                margin: 0;
                padding: 0;
                font-family: sans-serif;
                color: #313638;
            }


            h1, h2 {
                text-align: center;
            }
            h1 {
                margin-top: 5%;
            }

            table {
                border-collapse: collapse;
                width: 100%;
                margin-top: 20px;
                margin-bottom: 40px;
            }


        .details-container {
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            text-align: left;
            max-width: 70%;
            margin: 0 auto;
            padding: 2%;
        }

        h1, h2 {
            text-align: center;
        }

        table {
            width: 100%;
            margin-top: 1rem;
            border-collapse: collapse;
            margin-bottom: 2rem;
        }


        th, td {
            padding: 0.5rem;
            border: 1px solid #ddd;
            text-align: left;
            background-color: #f2f2f2;
        }

        .button-container {
            text-align: center;
            margin-top: 1rem;
        }

        .button {
            display: inline-block;
            padding: 0.2rem 0.4rem;
            background-color: #88afc2;
            border-radius: 5px;
            cursor: pointer;
            transition: background-color 0.3s;
            color: black;
            text-decoration: none;
            margin: 0.5rem;
        }

            .button:hover {
                background-color: rgb(251, 114, 19);
                color: black;
            }
    </style>
</head>

<body>
  
  
          <h1>Serviceorder Detaljer</h1>
  <p class="button-container">
            <div class="clickable">
                <a class="button" href="@Url.Action("Index", "Report", new { id = @Model.ServiceOrderModel.UpsertModel.ServiceOrderId })">Ny Raport</a>
                <a class="button" href="@Url.Action("ServiceOrderEdit", "ServiceOrder", new { id = @Model.ServiceOrderModel.UpsertModel.ServiceOrderId })">Rediger</a>
            </div>
            <a asp-action="Index" class="button">Tilbake til liste</a>
        </p>
    <div class="details-container">

        <table>
            <tr>
                <th>ID</th>
                <td>@Model.ServiceOrderModel.UpsertModel.ServiceOrderId</td>
            </tr>
            <tr>
                <th>Customer ID</th>
                <td>@Model.ServiceOrderModel.UpsertModel.CustomerId</td>
            </tr>
            <tr>
                <th>Reperatï¿½r</th>
                <td>@Model.ServiceOrderModel.UpsertModel.Mechanic</td>
            </tr>
            <tr>
                <th>Serienummer</th>
                <td>@Model.ServiceOrderModel.UpsertModel.SerialNumber</td>
            </tr>
            <tr>
                <th>Dato Opprettet</th>
                <td>@Model.ServiceOrderModel.UpsertModel.CreatedDate</td>
            </tr>
            <tr>
                <th>Kommentar</th>
                <td>@Model.ServiceOrderModel.UpsertModel.Comment</td>
            </tr>
            <tr>
                <th>Fremtidig Vedlikehold</th>
                <td>@Model.ServiceOrderModel.UpsertModel.FutureMaintenance</td>
            </tr>
            <tr>
                <th>Order Status</th>
                <td>@Model.ServiceOrderModel.UpsertModel.OrderStatus</td>
            </tr>
            <tr>
                <th>Reserve Deler</th>
                <td>@Model.ServiceOrderModel.UpsertModel.ReserveDeler</td>
            </tr>
            <tr>
                <th>Total Arbeidstimer</th>
                <td>@Model.ServiceOrderModel.UpsertModel.TotalWorkHours</td>
            </tr>
            <!-- Add other Customer details as needed -->
        </table>


        <h2>Customer Details</h2>

        @if (Model.ServiceOrderModel.UpsertModel.Customer != null)
        {
            <!-- Customer details table -->
            <table>
                <tr>
                    <th>Customer ID</th>
                    <td>@Model.ServiceOrderModel.UpsertModel.Customer.CustomerId</td>
                </tr>
                <tr>
                    <th>First Name</th>
                    <td>@Model.ServiceOrderModel.UpsertModel.Customer.CustomerFirstName</td>
                </tr>
                <tr>
                    <th>Last Name</th>
                    <td>@Model.ServiceOrderModel.UpsertModel.Customer.CustomerLastName</td>
                </tr>
                <tr>
                    <th>Email</th>
                    <td>@Model.ServiceOrderModel.UpsertModel.Customer.CustomerEmail</td>
                </tr>
                <tr>
                    <th>Adresse</th>
                    <td>@Model.ServiceOrderModel.UpsertModel.Customer.CustomerStreet</td>
                </tr>
                <tr>
                    <th>By</th>
                    <td>@Model.ServiceOrderModel.UpsertModel.Customer.CustomerCity</td>
                </tr>
                <tr>
                    <th>Landskode</th>
                    <td>@Model.ServiceOrderModel.UpsertModel.Customer.CustomerZipcode</td>
                </tr>
                <tr>
                    <th>Telefon</th>
                    <td>@Model.ServiceOrderModel.UpsertModel.Customer.CustomerPhoneNumber</td>
                </tr>
                <tr>
                    <th>Kommentar</th>
                    <td>@Model.ServiceOrderModel.UpsertModel.Customer.CustomerComment</td>
                </tr>
                <!-- Add other Customer details as needed -->
            </table>
        }
        else
        {
            <p>
                No customer information available.
                @if (Model.ServiceOrderModel.UpsertModel.Customer == null)
                {
                    <strong>Customer is null.</strong>
                }
            </p>
        }

        <!-- Move the 'Report Details' heading outside the 'Customer Details' block -->
        <h2>Report Details</h2>

        @if (Model.ReportModel.UpsertModel != null)
        {
            var reportsForServiceOrder = Model.ReportModel.ReportList
            .Where(report => report.ServiceOrderId == Model.ServiceOrderModel.UpsertModel.ServiceOrderId)
            .ToList();

            if (reportsForServiceOrder.Any())
            {
                <!-- Reports table -->
                <table>
                    <tr>
                        <th>Report ID</th>
                        <th>Mekaniker</th>
                        <th>Service Type</th>
                        <th>Mekaniker Kommentar</th>
                        <th>Service Beskrivelse</th>
                        <th>Rapport Dato</th>
                        <th>Signatur</th>
                        <!-- Add other Report properties here -->
                    </tr>
                    @foreach (var report in reportsForServiceOrder)
=======
            .clickable {
                margin-top: 20px;
                color: #000;
                text-decoration: none;
            }

            .center {
                display: flex;
                align-items: center;
                justify-content: center;
            }
        </style>
    </head>
    <body>

        <p>
            <a asp-action="Index">Tilbake</a>
        </p>
        <h1>Ordre Detaljer</h1>


        <div class="center">
            <div class="clickable">
                <a class="btn btn-primary" href="@Url.Action("Index", "Report", new { id = @Model.ServiceOrderModel.UpsertModel.ServiceOrderId })">Ny Raport</a>


                <a class="btn btn-primary" href="@Url.Action("ServiceOrderEdit", "ServiceOrder", new { id = @Model.ServiceOrderModel.UpsertModel.ServiceOrderId })">Rediger</a>
            </div>
        </div>
        
            <div class="center clickable">
                <a class="btn btn-success" href="@Url.Action("CheckList", "Report", new { id = @Model.ServiceOrderModel.UpsertModel.ServiceOrderId })">SjekkListe</a>
                </div>
        
        <br />
        <h2>Kunde Detaljer</h2>
        @if (Model.ServiceOrderModel.UpsertModel.Customer != null)
            {
                <table>
                    <tr>
                        <th>Kunde ID</th>
                        <th>Fornavn</th>
                        <th>Etternavn</th>
                        <th>Email</th>
                        <th>Gate</th>
                        <th>By</th>
                        <th>Postadresse</th>
                        <th>Mobilnummer</th>
                        <th>Kunde Kommentar</th>
                    </tr>
                    <tr>
                        <td>@Model.ServiceOrderModel.UpsertModel.Customer.CustomerId</td>
                        <td>@Model.ServiceOrderModel.UpsertModel.Customer.CustomerFirstName</td>
                        <td>@Model.ServiceOrderModel.UpsertModel.Customer.CustomerLastName</td>
                        <td>@Model.ServiceOrderModel.UpsertModel.Customer.CustomerEmail</td>
                        <td>@Model.ServiceOrderModel.UpsertModel.Customer.CustomerStreet</td>
                        <td>@Model.ServiceOrderModel.UpsertModel.Customer.CustomerCity</td>
                        <td>@Model.ServiceOrderModel.UpsertModel.Customer.CustomerZipcode</td>
                        <td>@Model.ServiceOrderModel.UpsertModel.Customer.CustomerPhoneNumber</td>
                        <td>@Model.ServiceOrderModel.UpsertModel.Customer.CustomerComment</td>
                    </tr>
                </table>
            }
            else
            {
                <p>Ingen kunde til denne ordren</p>
            }

            <h2>Service Ordre Detaljer</h2>
            <table>
                <tr>
                    <th>Mekaniker</th>
                    <td>@Model.ServiceOrderModel.UpsertModel.Mechanic</td>
                </tr>
                <tr>
                    <th>Serienummer</th>
                    <td>@Model.ServiceOrderModel.UpsertModel.SerialNumber</td>
                </tr>
                <tr>
                    <th>Dato opprettet</th>
                    <td>@Model.ServiceOrderModel.UpsertModel.CreatedDate.ToString("yyyy-dd-MM")</td>
                </tr>
                <tr>
                    <th>Leder Kommentar</th>
                    <td>@Model.ServiceOrderModel.UpsertModel.Comment</td>
                </tr>
                <tr>
                    <th>Sannsynlig videre vedlikehold</th>
                    <td>@Model.ServiceOrderModel.UpsertModel.FutureMaintenance</td>
                </tr>
                <tr>
                    <th>Opprettet av</th>
                    <td>@Model.ServiceOrderModel.UpsertModel.CreatedById</td>
                </tr>
                <tr>
                    <th>Ordre Status</th>
                    <td>@Model.ServiceOrderModel.UpsertModel.OrderStatus</td>
                </tr>
                <tr>
                    <th>Antatte arbeidstimer</th>
                    <td>@Model.ServiceOrderModel.UpsertModel.TotalWorkHours</td>
                </tr>
            </table>
            <br />

            <h2>Report Details</h2>
            @if (Model.ReportModel.ReportList != null && Model.ReportModel.ReportList.Any())
            {
                <table>
                    <tr>
                        <th>Report ID</th>
                        <th>Mekaniker/e</th>
                        <th>Kommentar</th>
                        <th>Service Type</th>
                        <th>Beskrivelse</th>
                        <th>Opprettet Dato</th>
                        <th>Laget av</th>
                        <!-- Add more columns as needed -->
                    </tr>
                    @foreach (var report in Model.ReportModel.ReportList)

                    {
                        <tr>
                            <td>@report.ReportId</td>
                            <td>@report.Mechanic</td>

                            <td>@report.ServiceType</td>
                            <td>@report.MechanicComment</td>
                            <td>@report.ServiceDescription</td>
                            <td>@report.ReportWriteDate</td>
                            <td>@report.UserSign</td>
                            <!-- Add other Report properties here -->

                            <td>@report.MechanicComment.</td>
                            <td>@report.ServiceType</td>
                            <td>@report.ServiceDescription.</td>
                            <td>@report.ReportWriteDate.ToString("yyyy-dd-MM")</td>
                            <td>@report.UserSign</td>
                            <!-- Add more cells as needed -->

                        </tr>
                    }
                </table>
            }
            else
            {

                <p>Ingen rapporter</p>
            }


        
    </div>
</body>

</html>
