@page "{id}"
@model AdminDesk.Areas.Identity.Pages.Account.Manage.UserEditModel


<h1>Rediger Bruker</h1>

@Html.AntiForgeryToken()
<form method="post" asp-page="./UserEdit" asp-route-id="@Model.User.Id" asp-page-handler="OnPostAsync">
    <input type="hidden" asp-for="User.Id" />
    <div>
        <label asp-for="User.UserName"> Bruker</label>
        <input asp-for="User.UserName" class="form-control" />
    </div>

    <div>
        <label asp-for="User.Email"> Email</label>
        <input asp-for="User.Email" class="form-control" />
    </div>

    <div>
        <label asp-for="User.PhoneNumber">Telefon Nummer</label>
        <input asp-for="User.PhoneNumber" class="form-control" />
    </div>
    <label asp-for="Input.Role">Rolle</label>
    <div class="form-floating mb-3">

        <select asp-for="Input.Role" class="form-select" aria-required="true">
            <option value="Admin">Admin</option>
            <option value="User">Bruker</option>
            <!-- Add more roles as needed -->
        </select>
        <label asp-for="Input.Role">Role</label>
    </div>

    <!-- Add other fields as needed -->

    <button type="submit" class="btn btn-primary">Save</button>
</form>